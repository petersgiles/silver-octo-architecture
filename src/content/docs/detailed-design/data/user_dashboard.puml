@startuml
!include ../../includes/theme.iuml
!include ../../includes/erd.iuml

hide methods
hide stereotypes

title User Dashboard

' entities

Table(application_user, "application_user") {
    primary_key(id)  number
}

Table(business_unit, "business_unit") {
    primary_key(id)  number
}

Table(news_feed, "news_feed") {
    primary_key(id)  number
    not_null(caption) string
    not_null(details) string  
    not_null(uri) string 
    not_null(created_on) datetime
}

Table(quick_stat_type, "quick_stat_type") {
    primary_key(id)  number
    not_null(caption) string
    not_null(details) string
}

Table(quick_stat, "quick_stat") {
    primary_key(id)  number
    not_null(caption) string
    not_null(details) string 
    data string
}

Table(briefing_group, "briefing_group") {
    primary_key(id)  number
    not_null(caption) string
    not_null(details) string  

}

Table(briefing_pack, "briefing_pack") {
    primary_key(id)  number
    not_null(caption) string
    not_null(details) string  
    not_null(alert_count) number 
}

